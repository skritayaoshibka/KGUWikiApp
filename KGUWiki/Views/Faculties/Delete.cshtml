@model KGUWiki.Models.Faculty

@{
    ViewData["Title"] = "Удаление записи из таблицы факультетов";
}

<a class="btn btn-outline-secondary m-2" asp-action="Index" asp-controller="Faculties">🡸Вернуться к таблице</a>
<div class="mx-auto w-75 m-3 text-center">
    <h2 class="text-center mb-3">Подтвердите, что хотите удалить нужную запись</h2>
    <hr />
    <p class="m-1 detail">
        <b>@Html.DisplayNameFor(model => model.Id):</b> @Html.DisplayFor(model => model.Id)
    </p>
    <p class="m-1 detail">
        <b>@Html.DisplayNameFor(model => model.FullName):</b> @Html.DisplayFor(model => model.FullName)
    </p>
    <p class="m-1 detail">
        <b>@Html.DisplayNameFor(model => model.ShortName):</b> @Html.DisplayFor(model => model.ShortName)
    </p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger m-1" />
    </form>
</div>
